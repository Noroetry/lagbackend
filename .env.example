# .env.example — no poner valores reales aquí. Copia a .env para desarrollo local

# App
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=<your_jwt_secret_here>

# System actor (used to send welcome messages)
SYSTEM_USERNAME=system
SYSTEM_EMAIL=system@lag.com
SYSTEM_PASSWORD=<strong_system_password_for_dev>
SYSTEM_ADMIN=100

# Database (option A: single URL — recommended for Neon)
# DATABASE_URL='postgresql://user:pass@host:5432/dbname?sslmode=require'

# Database (option B: individual vars — useful for local Postgres)
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=root
DB_NAME=lag

# Optional: control SSL verification for custom setups
DB_SSL_REJECT_UNAUTHORIZED=true
